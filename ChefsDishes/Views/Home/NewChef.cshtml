@model Chef

<div class="container">

        <div class="row justify-content-center mb-4">
        <div class="col text-center">
            <h1 class="h2">Add a Chef</h1>
            <hr> <!-- Ligne -->
        </div>
    </div>
<form asp-action="CreateChef" method="post">
    <div class="form-group">
        <label for="Name"> Name:</label>
        <input type="text" class="form-control" id="Name" asp-for="Name" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>
        <div class="form-group">
        <label for="DateOfBirth">Date of Birth:</label>
        <input type="date" class="form-control" id="DateOfBirth" asp-for="DateOfBirth" required />
        <span asp-validation-for="DateOfBirth" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary">Add Chef</button>
</form>
