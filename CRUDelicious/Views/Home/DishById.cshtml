@model Dish

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6 text-center">
            <h1 class="navbar-text">@Model.ChefName</h1>
        </div>
    </div>
    <div class="row justify-content-center mt-3">
        <div class="col-md-2 text-center">
            <a class="btn btn-link-lg" href="/">Home</a>
        </div>
        <div class="col-md-1 text-center">
            <span>|</span>
        </div>
        <div class="col-md-2 text-center">
            <a class="btn btn-link-lg" href="/Dishs/new">Add Dish</a>
        </div>
    </div>
</div>

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <h2>@Model.ChefName @Model.NameofDish</h2>
            <p>@Model.Description</p>
            <p><span>Calories:</span> @Model.Calories</p>
            <p><span>Tastiness:</span> @Model.Tastiness</p>
        </div>
    </div>
    <div class="row justify-content-center mt-4">
        <div class="col-md-6">
            <a class="btn btn-info" asp-action="EditDish" asp-route-dishID="@Model.Id">Edit</a>
            <a class="btn btn-danger" asp-action="DeleteDish" asp-route-dishId="@Model.Id">Delete</a>
        </div>
    </div>
</div>
